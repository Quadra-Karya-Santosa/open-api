{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/auth-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "./apps",
  "projects": {
    "open-api": {
      "type": "application",
      "root": "apps/open-api/src",
      "entryFile": "main",
      "sourceRoot": "apps/open-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/open-api/tsconfig.app.json"
      }
    },
    "auth-api": {
      "type": "application",
      "root": "apps/auth-api/src",
      "entryFile": "main",
      "sourceRoot": "apps/auth-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-api/tsconfig.app.json"
      }
    },
    "entities": {
      "type": "library",
      "root": "libs/entities",
      "entryFile": "index",
      "sourceRoot": "libs/entities/src",
      "compilerOptions": {
        "tsConfigPath": "libs/entities/tsconfig.lib.json"
      }
    },
    "dto": {
      "type": "library",
      "root": "libs/dto",
      "entryFile": "index",
      "sourceRoot": "libs/dto/src",
      "compilerOptions": {
        "tsConfigPath": "libs/dto/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "chat-api": {
      "type": "application",
      "root": "apps/chat-api/src",
      "entryFile": "main",
      "sourceRoot": "apps/chat-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat-api/tsconfig.app.json"
      }
    }
  }
}